@page "/"
<PageTitle>Hjem</PageTitle>
@inject NavigationManager Navigation

<!-- Import Bootstrap CSS and Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-overlay">
        <div class="hero-content">
            <h1>Velkommen til None Inclusive</h1>
            <p>Oplev uovertruffen komfort og elegance i hjertet af byen.</p>
            <button class="booking-button" @onclick="NavigateToBooking">Book din oplevelse</button>
        </div>
    </div>
</section>

@code {
    private void NavigateToBooking()
    {
        Navigation.NavigateTo("Booking");
    }
}

<!-- Facilities Section -->
<section class="facilities-section py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-lg-4 mb-4">
                <i class="bi bi-water fa-4x text-gold mb-3"></i>
                <h3 class="h4 mb-2">Swimmingpool</h3>
                <p>Slap af i vores opvarmede pool med betagende udsigt over vandet.</p>
            </div>
            <div class="col-lg-4 mb-4">
                <i class="bi bi-cup-straw fa-4x text-gold mb-3"></i>
                <h3 class="h4 mb-2">Restaurant</h3>
                <p>Forkæl dig med gourmetretter tilberedt af vores prisvindende kokke.</p>
            </div>
            <div class="col-lg-4 mb-4">
                <i class="bi bi-luggage fa-4x text-gold mb-3"></i>
                <h3 class="h4 mb-2">Spa & Wellness</h3>
                <p>Forkæl dig selv med eksklusive behandlinger og afslapning.</p>
            </div>
        </div>
    </div>
</section>


<!-- Reviews Section -->
<section class="reviews-section">
    <h2>Hvad siger vores gæster?</h2>
    <div class="review">
        <p>"Et uforglemmeligt ophold! Værelserne var fantastiske, og personalet var exceptionelt. Jeg vender helt sikkert tilbage!"</p>
        <span>- Mette, Danmark</span>
    </div>
    <div class="review">
        <p>"Perfekt beliggenhed og udsøgt mad! En oplevelse, der virkelig er værd at anbefale."</p>
        <span>- John, USA</span>
    </div>
</section>

<!-- About Section -->
<section class="about-section">
    <div class="about-content">
        <h2>Om None Inclusive</h2>
        <p>Vores femstjernede hotel kombinerer luksuriøse værelser med enestående service og en uforglemmelig oplevelse. Nyd en perfekt blanding af moderne komfort og tidløs elegance i hjertet af byen.</p>
    </div>
</section>

<!-- Footer Section -->
<footer class="footer">
    <div class="footer-content">
        <p>&copy; 2024 None Inclusive. Alle rettigheder forbeholdes.</p>
        <p>Kontakt os: <a href="mailto:info@HotelNoneInclusive.dk">info@HotelNoneInclusive.dk</a> | +45 112</p>
    </div>
</footer>

@code {
    private void BookNow()
    {
        // Tilføj din booking logik her eller naviger til booking siden
        // Eksempel: NavigationManager.NavigateTo("/booking");
    }
}

