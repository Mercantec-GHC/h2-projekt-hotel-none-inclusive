@page "/bookroom/{Id:int}"
@using System.Linq
@inject NavigationManager Navigation
@inject HttpClient httpClient
@using API.Models
@using System.ComponentModel.DataAnnotations

@code {
    [Parameter]
    public int Id { get; set; }
    private GetRoomDTO SelectedRoom { get; set; }
    public List<GetRoomDTO> rooms = new List<GetRoomDTO>();

    private DateTime checkInDate { get; set; } = DateTime.Now;
    private DateTime checkOutDate { get; set; } = DateTime.Now.AddDays(1);

    private BookingModel BookingDetails = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            rooms = await httpClient.GetFromJsonAsync<List<GetRoomDTO>>("https://localhost:7207/api/Rooms");
            SelectedRoom = rooms.FirstOrDefault(room => room.Id == Id);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Fejl ved hentning af værelsesdata: {ex.Message}");
        }
    }

    private void ConfirmBooking()
    {
        // Logik for at gemme og bekræfte booking (pt lokalt) Skal kobles op med database
        Navigation.NavigateTo("/confirmation");
    }

    public class BookingModel
    {
        [Required(ErrorMessage = "Fornavn er påkrævet.")]
        public string FirstName { get; set; }

        [Required(ErrorMessage = "Efternavn er påkrævet.")]
        public string LastName { get; set; }

        [Required(ErrorMessage = "Email er påkrævet.")]
        [EmailAddress(ErrorMessage = "Ugyldig email-adresse.")]
        public string Email { get; set; }

        [Required(ErrorMessage = "Telefonnummer er påkrævet.")]
        [Phone(ErrorMessage = "Ugyldigt telefonnummer.")]
        public string Phone { get; set; }
    }
}

@if (SelectedRoom != null)
{
    <div class="booking-page">
        <div class="booking-container">
            <div class="booking-room-info">
                <img src="@SelectedRoom.ImageURL" alt="Billede af @SelectedRoom.RoomType" class="booking-room-image" />
                <h1 class="booking-room-title">@SelectedRoom.RoomType</h1>
                <p class="booking-room-price">@SelectedRoom.Price kr./nat</p>
                <p class="booking-room-description">@SelectedRoom.Description</p>
            </div>

            <div class="booking-form">
                <h2>Book dette værelse</h2>
                <EditForm Model="@BookingDetails" OnValidSubmit="ConfirmBooking">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="form-group">
                        <label for="firstName">Fornavn</label>
                        <InputText id="firstName" class="form-control" @bind-Value="BookingDetails.FirstName" />
                        <ValidationMessage For="@(() => BookingDetails.FirstName)" />
                    </div>

                    <div class="form-group">
                        <label for="lastName">Efternavn</label>
                        <InputText id="lastName" class="form-control" @bind-Value="BookingDetails.LastName" />
                        <ValidationMessage For="@(() => BookingDetails.LastName)" />
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <InputText id="email" class="form-control" type="email" @bind-Value="BookingDetails.Email" />
                        <ValidationMessage For="@(() => BookingDetails.Email)" />
                    </div>

                    <div class="form-group">
                        <label for="phone">Telefon</label>
                        <InputText id="phone" class="form-control" type="tel" @bind-Value="BookingDetails.Phone" />
                        <ValidationMessage For="@(() => BookingDetails.Phone)" />
                    </div>

                    <div class="form-group">
                        <label for="checkInDate">Check-in Dato</label>
                        <InputDate id="checkInDate" class="form-control" TValue="DateTime" @bind-Value="checkInDate" />
                    </div>

                    <div class="form-group">
                        <label for="checkOutDate">Check-out Dato</label>
                        <InputDate id="checkOutDate" class="form-control" TValue="DateTime" @bind-Value="checkOutDate" />
                    </div>

                    <button type="submit" class="btn btn-primary">Bekræft booking</button>
                </EditForm>
            </div>
        </div>
    </div>
}
else
{
    <p>Værelset blev ikke fundet.</p>
}

