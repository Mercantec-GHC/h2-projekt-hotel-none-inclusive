@page "/bookroom/{Id:int}"
@using System.Linq
@inject NavigationManager Navigation
@inject HttpClient httpClient
@inject Service.DatabaseServices DBServices
@using API.Models
@using System.ComponentModel.DataAnnotations

@code {
    [Parameter]
    public int Id { get; set; }
    public string email;
    private GetRoomDTO SelectedRoom;
    private UserGetDTO SelectedUser;

    private CreateBookingDTO newBooking = new CreateBookingDTO();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            SelectedRoom = await DBServices.GetRoomById(Id);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Fejl ved hentning af værelsesdata: {ex.Message}");
        }
    }



    private async Task GetUser()
    {
        SelectedUser = await DBServices.GetUserByEmail(email);
        newBooking.UserId = SelectedUser.Id;
        newBooking.RoomId = SelectedRoom.Id;
        await DBServices.CreateBooking(newBooking);
    }
}


<p>Email:</p>
<input type="text" @bind="email" placeholder="Enter Email" />
<p>Start date:</p>
<input type="text" @bind="newBooking.BookingStartDate" placeholder="Enter start date" />
<p>End date:</p>
<input type="text" @bind="newBooking.BookingEndDate" placeholder="Enter end date" />

<button @onclick="GetUser" type="submit">Submit</button>

