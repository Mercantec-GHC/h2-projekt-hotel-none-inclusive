@page "/room/{Id:int}"
@using System.Linq
@inject NavigationManager Navigation

<!-- Import Bootstrap CSS and Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

@code {
    [Parameter]
    public int Id { get; set; }

    private RoomDetails SelectedRoom { get; set; }
    //(Dummy Data. Should fetch from database)
    private List<RoomDetails> Rooms = new List<RoomDetails>
    {
        new RoomDetails { Id = 1, Type = "Single Room", Price = 500, ImageUrl = "images/single-room.jpg", Description = "Perfekt til én person med alle nødvendige faciliteter.", Amenities = new List<string> { "Gratis Wi-Fi", "Room service", "Fladskærms TV", "Skrivebord" } },
        new RoomDetails { Id = 11, Type = "Double Room", Price = 800, ImageUrl = "images/double-room.png", Description = "Ideelt til par, med en stor dobbeltseng og moderne indretning.", Amenities = new List<string> { "Balkon", "Minibar", "Gratis morgenmad", "Udsigt til haven" } },
        new RoomDetails { Id = 21, Type = "Suite", Price = 1500, ImageUrl = "images/suite-room.jpg", Description = "En luksuriøs suite for familien med ekstra plads og premium faciliteter.", Amenities = new List<string> { "Privat jacuzzi", "Køkken", "Udsigt til havet", "Adgang til eksklusiv lounge" } }
    };

    protected override void OnInitialized()
    {
        SelectedRoom = Rooms.FirstOrDefault(room => room.Id == Id);
    }

    private void NavigateToBooking()
    {
        Navigation.NavigateTo("/booking");
    }

    private class RoomDetails
    {
        public int Id { get; set; }
        public string Type { get; set; }
        public int Price { get; set; }
        public string ImageUrl { get; set; }
        public string Description { get; set; }
        public List<string> Amenities { get; set; }
    }
}

@if (SelectedRoom != null)
{
    <div class="room-container">
        <div class="room-image-gallery">
            <img src="@SelectedRoom.ImageUrl" alt="Billede af @SelectedRoom.Type" class="room-main-image" />
        </div>
        <div class="room-info">
            <h1 class="room-title">@SelectedRoom.Type</h1>
            <p class="room-price">@SelectedRoom.Price kr./nat</p>
            <p class="room-description">@SelectedRoom.Description</p>
            <h4 class="room-amenities-title">Faciliteter</h4>
            <ul class="room-amenities-list">
                @foreach (var amenity in SelectedRoom.Amenities)
                {
                    <li>@amenity</li>
                }
            </ul>
            <button class="btn btn-primary" @onclick="NavigateToBooking">Book nu</button>
        </div>
    </div>
}
else
{
    <p>Værelset blev ikke fundet.</p>
}

<style>
    .room-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #ffffff;
        border-radius: 12px;
        padding: 40px;
