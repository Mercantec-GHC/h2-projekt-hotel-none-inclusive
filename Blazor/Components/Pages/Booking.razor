@page "/booking"

@* Liste over værelser *@
@code {
    private List<Room> Rooms = new List<Room>();

    protected override void OnInitialized()
    {
        // Generer 10 værelser af hver type
        for (int i = 1; i <= 10; i++)
        {
            Rooms.Add(new Room { Id = i, Type = "Single Room", Price = 500, ImageUrl = "images/single-room.jpg", Description = "Perfekt til én person med alle nødvendige faciliteter." });
            Rooms.Add(new Room { Id = i + 10, Type = "Double Room", Price = 800, ImageUrl = "images/double-room.png", Description = "Ideelt til par, med en stor dobbeltseng og moderne indretning." });
            Rooms.Add(new Room { Id = i + 20, Type = "Suite", Price = 1500, ImageUrl = "images/suite-room.jpg", Description = "En luksuriøs suite for familien med ekstra plads og premium faciliteter." });
        }
    }

    private class Room
    {
        public int Id { get; set; }
        public string Type { get; set; }
        public int Price { get; set; }
        public string ImageUrl { get; set; }
        public string Description { get; set; }
    }
}

<h3>‎ </h3>

<!-- Filter sektion -->
<div class="filter-section">
    <h4>Filtrer værelser</h4>
    <div class="filter-controls">
        <label>
            Værelsestype:
            <select>
                <option value="">Alle</option>
                <option value="Single">Single</option>
                <option value="Double">Double</option>
                <option value="Suite">Suite</option>
            </select>
        </label>
        <label>
            Maksimal pris:
            <input type="number" placeholder="Indtast maksimal pris" />
        </label>
        <button class="btn btn-secondary">Anvend Filter</button>
    </div>
</div>

<!-- Liste af værelser -->
<div class="rooms-list">
    @foreach (var room in Rooms)
    {
        <div class="room-card">
            <img src="@room.ImageUrl" alt="Billede af @room.Type" class="room-image" />
            <div class="room-details">
                <h5>@room.Type</h5>
                <p>@room.Description</p>
                <p>Pris pr. nat: @room.Price kr.</p>
                <a href="/room/@room.Id" class="btn btn-primary">Se detaljer</a>
            </div>
        </div>
    }
</div>

<style>
    /* Tilføj topmargen for at give plads til headeren */
    :global(body) {
        margin-top: 100px; /* Juster denne værdi afhængigt af headerens højde */
    }

    .filter-section {
        padding: 20px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        background-color: #f8f9fa;
        border-radius: 5px;
    }

    .filter-controls {
        display: flex;
        gap: 15px;
        align-items: center;
    }

        .filter-controls label {
            display: flex;
            flex-direction: column;
            margin-bottom: 10px;
        }

    .rooms-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: flex-start;
    }

    .room-card {
        border: 1px solid #ddd;
        border-radius: 5px;
        width: 300px;
        overflow: hidden;
        padding: 0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .room-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

    .room-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .room-details {
        padding: 15px;
        text-align: center;
    }

        .room-details h5 {
            margin-top: 0;
            margin-bottom: 10px;
            font-size: 1.25em;
        }

        .room-details p {
            margin: 5px 0;
            color: #555;
        }

    .btn-primary, .btn-secondary {
        display: inline-block;
        margin-top: 10px;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 5px;
        text-align: center;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>
