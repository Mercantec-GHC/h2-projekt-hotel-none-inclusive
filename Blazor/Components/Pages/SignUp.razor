@page "/SignUp"

<PageTitle>SignUp</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-sm">
        </div>
        <div class="col-sm">
            <div class="card" style="width: 30rem;">
                <div class="card-body">
                    <h3 class="text-center">Sign Up</h3>
                    <EditForm Model="userModel" OnValidSubmit="Submit">
                        <DataAnnotationsValidator />
                        <div class="form-row">
                            <div class="form-group">
                                <label for="inputEmail4">Email</label>
                                <input type="email" class="form-control" id="inputEmail4" placeholder="MyEmail@google.com" @bind="userModel.Email">
                            </div>
                            <div class="form-group">
                                <label for="inputPassword4">Password</label>
                                <input type="password" class="form-control" id="inputPassword4" placeholder="My Secret Password" @bind="userModel.Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputAddress">Address</label>
                            <input type="text" class="form-control" id="inputAddress" placeholder="Rowling Street" @bind="userModel.Address">
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="inputCity">City</label>
                                <input type="text" class="form-control" id="inputCity" placeholder="The City I live in" @bind="userModel.City">
                            </div>
                            <div class="form-group">
                                <label for="inputCountry">Country</label>
                                <input type="text" class="form-control" id="inputCountry" placeholder="The country I live in" @bind="userModel.Country">
                            </div>
                            <div class="form-group">
                                <label for="inputZip">Zip</label>
                                <input type="text" class="form-control" id="inputZip" placeholder="The zip code I live in" @bind="userModel.Zip">
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-dark mt-3 justify-content-center">Sign up</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
        <div class="col-sm">
        </div>
    </div>
</div>

@code {
    private UserModel userModel = new UserModel();

    private void Submit()
    {
        // Her kan du bruge userModel for at få adgang til de indtastede oplysninger
        Console.WriteLine($"Email: {userModel.Email}");
        Console.WriteLine($"Password: {userModel.Password}");
        Console.WriteLine($"Address: {userModel.Address}");
        Console.WriteLine($"City: {userModel.City}");
        Console.WriteLine($"Country: {userModel.Country}");
        Console.WriteLine($"Zip: {userModel.Zip}");
    }

    public class UserModel
    {
        public string Email { get; set; }
        public string Password { get; set; }
        public string Address { get; set; }
        public string City { get; set; }
        public string Country { get; set; }
        public string Zip { get; set; }
    }
}
